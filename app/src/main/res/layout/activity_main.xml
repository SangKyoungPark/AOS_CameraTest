<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Test"
        android:textColor="@color/black"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/left_img"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501" />

    <ImageView
        android:id="@+id/right_img"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/left_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501" />

    <Button
        android:id="@+id/add_left_btn"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="+\n추가"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/left_img"
        app:layout_constraintEnd_toEndOf="@+id/left_img"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="@+id/left_img"
        app:layout_constraintTop_toTopOf="@+id/left_img"
        tools:visibility="visible" />

    <Button
        android:id="@+id/add_right_btn"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="+\n추가"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/right_img"
        app:layout_constraintEnd_toEndOf="@+id/right_img"
        app:layout_constraintStart_toStartOf="@+id/right_img"
        app:layout_constraintTop_toTopOf="@+id/right_img"
        tools:visibility="visible" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:enabled="false"
        android:text="저 장"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/camera_left_btn"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:text="사진촬영"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/album_left_btn"
        app:layout_constraintEnd_toEndOf="@+id/left_img"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="@+id/left_img"
        app:layout_constraintTop_toTopOf="@+id/left_img"
        app:layout_constraintVertical_bias="0.208"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/album_left_btn"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginBottom="68dp"
        android:text="앨범"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/left_img"
        app:layout_constraintEnd_toEndOf="@+id/left_img"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="@+id/left_img"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/album_right_btn"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginBottom="68dp"
        android:text="앨범"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/right_img"
        app:layout_constraintEnd_toEndOf="@+id/right_img"
        app:layout_constraintStart_toEndOf="@+id/left_img"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/camera_right_btn"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="사진 촬영"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/album_right_btn"
        app:layout_constraintEnd_toEndOf="@+id/right_img"
        app:layout_constraintStart_toEndOf="@+id/left_img"
        app:layout_constraintTop_toTopOf="@+id/right_img"
        app:layout_constraintVertical_bias="0.625"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/before_text"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="전"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/left_img"
        app:layout_constraintEnd_toEndOf="@+id/left_img"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="@+id/left_img" />

    <TextView
        android:id="@+id/after_text"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="후"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/right_img"
        app:layout_constraintEnd_toEndOf="@+id/right_img"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toEndOf="@+id/left_img" />



</androidx.constraintlayout.widget.ConstraintLayout>